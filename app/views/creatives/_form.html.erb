<div class="row">
  <div class="large-6 medium-6 small-8 columns">
    <%= form_for(@creative) do |f| %>
        <% if @creative.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@creative.errors.count, "error") %> prohibited this creative from being saved:</h2>

              <ul>
                <% @creative.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_field :description %>
        </div>
        <div class="field">
          <%= f.label :tag_list, "Tags (separated by commas)" %><br />
          <%= f.text_field :tag_list %>
        </div>
        <div class="actions">
          <%= f.submit "Submit", :class => "button radius" %>
        </div>
    <% end %>
  </div>
</div>
