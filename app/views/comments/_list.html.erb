<h1>Comments</h1>
<div class="row">
  <div class="large-11 medium-11 small-10 columns">
    <% @comments.each do |comment| %>
        <div class="comment">
          <%= comment.body %><br>
          <span class="signature"><%= "#{comment.user.email} : #{comment.created_at}" %></span>
        </div>
    <% end %>
    <%= form_for [@creative, @new_comment], url: comments_creative_path do |f| %>
        <div class="field">
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit "Submit", :class => "button radius" %>
        </div>
    <% end %>
  </div>
</div>

